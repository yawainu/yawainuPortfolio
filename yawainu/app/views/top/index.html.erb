<header>
  <nav class="navbar navbar-inverse navbar-fixed-top">
    <div class="container-fluid">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <h1><a class="navbar-brand" href="#">yawainu</a></h1>
      </div>

      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav navbar-right">
          <li><a href="#profile">profile</a></li>
          <li><a href="#gallery">garelly</a></li>
          <li><a href="#works">works</a></li>
          <li><a href="#contact">contact</a></li>
        </ul>
      </div>
    </div>
  </nav>
</header>

<section class="container-fuild cover">
</section>

<section class="main-wrap">

  <section id="profile" class="container-fluid profile">
    <div class="row">
      <div class="col-sm-offset-2 col-sm-2">
        <img src="<%= asset_path "sample_icon.png" %>" class="img-responsive img-circle profile__icon">
      </div>
      <div class="col-sm-6">
        <div class="profile__text">
          ああああああああああああああああああああああああああああああああ
          ああああああああああああああああああああああああああああああああ
          ああああああああああああああああああああああああああああああああ
        </div>
      </div>
    </div>
  </section>

  <hr class="no-border">

  <section id="gallery" class="container gallery">
    <h2>GALLERY</h2>
    <h3>CATEGORY</h3>
    <div class="row">
      <% for num in 1..10 do %>
        <div class="col-xs-6 col-sm-4">
          <button class="btn gallery__item" data-toggle="modal" data-target=".gallery-modal">
          </button>
        </div>
      <% end %>
    </div>
  </section>

  <section class="modal fade gallery-modal" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-body">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <img src="<%= asset_path "sample_icon.png" %>" class="img-responsive">
          <div class="gallery-modal__text">
            <h4>イラストタイトル</h4>
            <p>イラストの内容あああああああああああああああああああああああああああああああああああ</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <hr class="no-border">

  <section id="works" class="container works">
    <h2>WORKS</h2>

    <% for num in 1..10 do %>
      <div class="row">
        <div class="col-sm-4 col-md-3 works__date">2015/12/12 ~ 2016/12/12</div>
        <div class="col-sm-8 col-md-9 works__text">iOS,androidアプリ「柔らかい犬祭り」内キャラクターイラスト</div>
      </div>
    <% end %>
  </section>

  <hr class="no-border">

</section>

<footer>
  <section id="contact" class="container contact">
    <div class="row">
      <%= bootstrap_form_tag do |f| %>
        <div class="col-md-6">
          <%= f.text_field :email %>
          <%= f.text_field :subject %>
          <%= f.text_area :body %>
          <%= f.submit '送信', :class=>"btn btn-primary form-submit-btn pull-right" %>
        </div>
      <% end %>
    </div>
  </section>
  <section class="copyright text-center">
    <small>Copyright (C) 2016 yawainu.com All Rights Reserved.</small>
  </section>
</footer>