<div class="panel panel-default admin-panel">
  <div class="panel-heading">
    <h1>表示設定</h1>
  </div>
  <%= bootstrap_form_tag do |f| %>
    <div class="panel-body">
      <%= f.select :cover, [["表示", 1], ["非表示", 0]] %>
      <%= f.select :gallery, [["表示", 1], ["非表示", 0]] %>
      <%= f.select :work, [["表示", 1], ["非表示", 0]] %>
      <%= f.select :contact, [["表示", 1], ["非表示", 0]] %>
    </div>
    <div class="panel-footer">
      <a href="#" class="btn btn-default" role="button">戻る</a>
      <%= f.submit '変更', :class=>"btn btn-primary form-submit-btn" %>
    </div>
  <% end %>
</div>